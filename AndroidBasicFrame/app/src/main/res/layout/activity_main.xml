<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--标题栏-->
    <include layout="@layout/titlebar" />

    <View style="@style/login_register_line" />
    <!--FrameLayout-->
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <View style="@style/login_register_line" />
    <!--RadioGroup-->
    <RadioGroup
        android:id="@+id/rg_bottom_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTitlebar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="3dp">

        <RadioButton
            android:id="@+id/rb_foundation"
            style="@style/botttom_tag_style"
            android:background="@null"
            android:drawableTop="@drawable/rb_common_frame_drawable_selector"
            android:text="基础" />

        <RadioButton
            android:id="@+id/rb_interview"
            style="@style/botttom_tag_style"
            android:background="@null"
            android:drawableTop="@drawable/rb_thirdparty_drawable_selector"
            android:text="面试" />

        <RadioButton
            android:id="@+id/rb_frame"
            style="@style/botttom_tag_style"
            android:background="@null"
            android:drawableTop="@drawable/rb_custom_drawable_selector"
            android:text="框架" />

        <RadioButton
            android:id="@+id/rb_my"
            style="@style/botttom_tag_style"
            android:background="@null"
            android:drawableTop="@drawable/rb_other_drawable_selector"
            android:text="我的" />

    </RadioGroup>

</LinearLayout>