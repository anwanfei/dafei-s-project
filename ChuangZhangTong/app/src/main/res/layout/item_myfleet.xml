<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_vertical">

    <CheckBox
        android:id="@+id/cb_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rb_choose_selector"
        android:button="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_item_ship_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_identity_gray"
        android:gravity="center"
        android:text="@string/huahai_one"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_certificate"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_identity_blue"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/certificate_list"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
