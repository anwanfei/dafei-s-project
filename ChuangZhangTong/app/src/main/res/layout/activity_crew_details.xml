<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:context="com.junhangxintong.chuanzhangtong.mine.activity.CrewDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/titlebar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/name" />

            <TextView
                android:id="@+id/tv_crew_name"
                style="@style/edittext_no_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/phone" />

            <TextView
                android:id="@+id/tv_crew_phone"
                style="@style/edittext_no_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_nationality"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:layout_centerVertical="true"
                android:text="@string/nationalities" />

            <TextView
                android:id="@+id/tv_crew_nationality"
                style="@style/edittext_no_arrow"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_choose_certificate_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:layout_centerVertical="true"
                android:text="@string/certificates_type" />

            <TextView
                android:id="@+id/tv_ceretificate_type"
                style="@style/edittext_no_arrow"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/certificate_num" />

            <TextView
                android:id="@+id/tv_crwe_certificate_number"
                style="@style/edittext_no_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/crew_belong_ship" />

            <TextView
                android:id="@+id/tv_belong_ship"
                style="@style/edittext_no_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_choose_duty"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:layout_centerVertical="true"
                android:text="@string/duty" />

            <TextView
                android:id="@+id/tv_crew_duty"
                style="@style/edittext_no_arrow"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/job_num" />

            <TextView
                android:id="@+id/tv_crew_job_num"
                style="@style/edittext_no_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/mail_box" />

            <TextView
                android:id="@+id/tv_crew_mail_box"
                style="@style/edittext_no_arrow" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
