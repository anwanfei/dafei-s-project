<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.junhangxintong.chuanzhangtong.mine.activity.CertificateIndetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_bg"
        android:orientation="vertical">


        <include layout="@layout/titlebar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/certificate_name" />

            <TextView
                android:id="@+id/tv_input_certificate_name"
                style="@style/textview_style_certificate"
                android:text="@string/certificate_name" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/certificate_number" />

            <TextView
                android:id="@+id/tv_certificate_number"
                style="@style/textview_style_certificate"
                android:text="@string/certificate_name" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_certificate_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/certificate_type" />

            <TextView
                android:id="@+id/et_certificate_type"
                style="@style/textview_style_certificate"
                android:text="@string/certificate_type" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_issuing_authority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/issuing_authority" />

            <TextView
                android:id="@+id/tv_issuing_authority"
                style="@style/textview_style_certificate"
                android:text="@string/issuing_authority" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/end_date" />

            <TextView
                android:id="@+id/tv_end_date"
                style="@style/textview_style_certificate"
                android:text="@string/end_date" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_warning_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/re_warning_days" />

            <TextView
                android:id="@+id/tv_warning_days"
                style="@style/textview_style_certificate"
                android:text="@string/re_warning_days" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                style="@style/account_setting_left_textview"
                android:text="@string/is_common" />

            <TextView
                android:id="@+id/tv_common"
                style="@style/textview_style_certificate"
                android:text="@string/is_common" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:padding="15dp">

            <TextView
                android:id="@+id/tv_add_certificate_photo"
                style="@style/account_setting_left_textview"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:text="@string/add_certificate_photo" />

            <ImageView
                android:id="@+id/iv_certificate_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/add_certificate" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
