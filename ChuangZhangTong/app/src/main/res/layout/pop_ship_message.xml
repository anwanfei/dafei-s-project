<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_ship_message"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_pop_noon_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="@string/noon_message"
        android:textColor="@color/white" />

    <View
        android:layout_width="80dp"
        android:layout_height="0.5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_gray" />

    <TextView
        android:id="@+id/tv_pop_arrival_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/arrival_message"
        android:textColor="@color/white" />

    <View
        android:layout_width="80dp"
        android:layout_height="0.5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_gray" />

    <TextView
        android:id="@+id/tv_pop_berthing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/berthing_message"
        android:textColor="@color/white" />

    <View
        android:layout_width="80dp"
        android:layout_height="0.5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_gray" />

    <TextView
        android:id="@+id/tv_ship_leave_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/leave_message"
        android:textColor="@color/white" />

</LinearLayout>